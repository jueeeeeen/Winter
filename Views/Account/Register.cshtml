@model Winter_Project.Models.UserModel

@{
    ViewData["Title"] = "Register";
}

@section styles {
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user.css" asp-append-version="true" />
}

@section scripts {
    <script src="~/js/auth/register/register_form.js"></script>
}

<div class="progress-bar">
    <div class="step">
        <div class="bullet">
            <span>1</span>
        </div>
        <p>Account</p>
    </div>
    <div class="step">
        <div class="bullet">
            <span>2</span>
        </div>
        <p>Account</p>
    </div>
</div>

<div class="register-card">
    <img src="\assets\winter_login_pic.jpg" alt="register background">
    <h2>CREATE ACCOUNT</h2>
    <div class="form-outer">
        <form action="#">
            <div class="page">
                <div class="register-box1">
                    <img src="\assets\Profile-b.png" alt="username">
                    <input type="text" placeholder="username">
                </div>
                <div class="register-box1">
                    <img src="\assets\mail.svg" alt="email">
                    <input type="email" placeholder="email">
                </div>
                <div class="register-box1">
                    <img src="\assets\lock.svg" alt="password">
                    <input type="password" placeholder="password" id="password">
                </div>
                <div class="register-box1">
                    <img src="\assets\lock.svg" alt="password">
                    <input type="password" placeholder="confirm password" id="confirm-password">
                </div>
                <div class="next-button">
                    <button>next</button>
                </div>
                <div class="login-description">
                    <p>Already have an account?</p>
                    <a href="~/Account/Login">login</a>
                </div>
            </div>

            <div class="page">
                <div class="register-box2">
                    <input type="text" placeholder="first name" >
                </div>
                <div class="register-box2">
                    <input type="text" placeholder="last name" >
                </div>
                <div class="register-box2">
                    <input type="date" >
                </div>
                <div>
                    <div class="gender-button">
                        <button class="male-button">
                            <img src="\assets\male_icon-b.svg" alt="male icon">
                        </button>
                        <button class="lgbtq-button">
                            <img src="\assets\heart.svg" alt="lgbtq+ icon">
                        </button>
                        <button class="female-button">
                            <img src="\assets\female_icon-p.svg" alt="female icon">
                        </button>
                    </div>
                </div>
                <div class="register-button">
                    <button>create account</button>
                </div>
                <div class="login-description">
                    <p>Already have an account?</p>
                    <a href="~/Account/Login">login</a>
                </div>
            </div>
        </form>
    </div>
</div>