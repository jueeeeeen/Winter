@{
    ViewData["Title"] = "Create";
}

<div class="create-container">
    <div class="create-card">
        <div class="create-header">
            <p>Details</p>
        </div>
        <form class="create-details">
            <div class="form-group">
                <label>Activity Header :</label>
                <input/>
            </div>
            <div class="form-group">
                <label>Activity Details :</label>
                <textarea rows="6"></textarea>
            </div>
            <div class="form-group">
                <label>Date - Time :</label>
                <input/>
            </div>
            <div class="form-group">
                <label>Location :</label>
                <input/>
            </div>
            <div class="form-group">
                <label>Number of member : (Include yourself)</label>
                <number-input></number-input>
            </div>
            <div class="form-group">
                <label>Tags :</label>
                <tag-select></tag-select>
            </div>
            <div class="form-group">
                <label>Membership approval :</label>
                <div class="radio-input">
                    <div class="radio-input-choice">
                        <input type="radio" name="approval" value="false"/>
                        <p>Approval not needed</p>
                    </div>
                    <div class="radio-input-choice">
                        <input type="radio" name="approval" value="true"/>
                        <p>All members must be approved</p>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="create-card">
        <div class="create-header">
            <p>Requirements (Optional)</p>
        </div>
        <form class="create-details">
            <div class="form-group">
                <label>Gender :</label>
                <div class="radio-input">
                    <div class="radio-input-choice">
                        <input type="radio" name="gender_requirement" value="male"/>
                        <p>Male</p>
                    </div>
                    <div class="radio-input-choice">
                        <input type="radio" name="gender_requirement" value="female"/>
                        <p>Female</p>
                    </div>
                    <div class="radio-input-choice">
                        <input type="radio" name="gender_requirement" value="lgbtq"/>
                        <p>LGBTQ+</p>
                    </div>
                    <div class="radio-input-choice">
                        <input type="radio" name="gender_requirement" value="none"/>
                        <p>None</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Age</label>
                <number-input></number-input>
            </div>
            <div class="form-group">
                <label>Other :</label>
                <input/>
            </div>
        </form>
    </div>
    <div class="last-card">
        <div class="check-before">
            <input type="checkbox"/>
            <p>By creating an activity, you agree to our <span class="red">Terms of Use</span> and <span class="red">Privacy Policy</span>.</p>
        </div>
        <button class="btn round medium create-btn" onclick="window.location.href='Create'">
            <img src="assets/plus-w.svg" alt="plus icon">Create
        </button>
    </div>
</div>   