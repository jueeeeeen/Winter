 @model Winter_Project.Models.UserModel
@{
    ViewData["Title"] = "AddUsers";
}

<form asp-action="AddUser" asp-controller="Home" method="post">

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="Email" class="form-control" asp-for="email"/>
    </div>

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="Name" class="form-control" asp-for="Name"/>
    </div>

    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="Username" class="form-control" asp-for="Username"/>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
