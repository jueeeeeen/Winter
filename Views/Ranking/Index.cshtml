@model List<Winter_Project.Models.RankingViewModel>

@{
    ViewData["Title"] = "Ranking";
}

<h1 class="text-center">üèÜ Rating Ranking üèÜ</h1>
<div class="podium">
        <div class="podium-place second">
            @if (Model[1].ReviewedUser != "-"){
                <a href="/profile/@Model[1].ReviewedUser">
                    <img class="profile" src="data:image/png;base64,@Convert.ToBase64String(Model[1].ProfilePicture)" />
                    <p class="emoji">ü•à</p>
                    <p class="username">@("@" + Model[0].ReviewedUser)</p>
                    <h2 class="name">@Model[1].FirstName @Model[1].LastName</h2>
                    <div class="rating-container">
                        <div class="rating">
                            <p class="rating-count">‚≠ê @Model[1].AverageRating.ToString("0.00")</p>
                        </div>
                        <p class="count-review">(@Model[1].ReviewCount)</p>
                    </div>
                </a>
            }
        </div>
        <div class="podium-place first">
            @if (Model[0].ReviewedUser != "-"){
                <a href="/profile/@Model[0].ReviewedUser">
                    <img class="profile" src="data:image/png;base64,@Convert.ToBase64String(Model[0].ProfilePicture)" />
                    <p class="emoji">ü•á</p>
                    <p class="username">@("@" + Model[0].ReviewedUser)</p>
                    <h2 class="name">@Model[0].FirstName @Model[0].LastName</h2>
                    <div class="rating-container">
                        <div class="rating">
                            <p class="rating-count">‚≠ê @Model[0].AverageRating.ToString("0.00")</p>
                        </div>
                        <p class="count-review">(@Model[0].ReviewCount)</p>
                    </div>
                </a>
            }
        </div>
        <div class="podium-place third">
            @if (Model[2].ReviewedUser != "-"){
                <a href="/profile/@Model[2].ReviewedUser">
                    <img class="profile" src="data:image/png;base64,@Convert.ToBase64String(Model[2].ProfilePicture)" />
                    <p class="emoji">ü•â</p>
                    <p class="username">@("@" + Model[2].ReviewedUser)</p>
                    <h2 class="name">@Model[2].FirstName @Model[2].LastName</h2>
                    <div class="rating-container">
                        <div class="rating">
                            <p class="rating-count">‚≠ê @Model[2].AverageRating.ToString("0.00")</p>
                        </div>
                        <p class="count-review">(@Model[2].ReviewCount)</p>
                    </div>
                </a>
            }
        </div>
</div>

<div class="show-table">
    <table class="ranking-table">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Username</th>
                <th>Name</th>
                <th>Average Rating</th>
                <th>Review Count</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                @if (Model[i].ReviewedUser != "-"){
                    <tr onclick="window.location='/profile/@Model[i].ReviewedUser'">
                        <td>@(i + 1)</td>
                        <td>@("@" + @Model[i].ReviewedUser)</td>
                        <td>@Model[i].FirstName @Model[i].LastName</td>
                        <td>‚≠ê @Model[i].AverageRating.ToString("0.00")</td>
                        <td>@Model[i].ReviewCount</td>
                    </tr>
                }
                else{
                    <tr>
                        <td>@(i + 1)</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>